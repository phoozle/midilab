<!DOCTYPE html>
<html>
<head>
  <title>MidiLab</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <script type='text/javascript'>
  <%= yield :javascript_functions %>

  $(document).ready(function() {
    <%= yield :javascript %>
  });
  </script>

</head>
<body>
    <div id=popup_holder>
      <div id=popup>
        <div id=popup_close><%= image_tag("close.png", :class => 'popup_toggle') %></div>
        <div id=popup_content>
          <p>This is a placeholder for information related to what ever triggered this popup.</p>
        </div>
      </div>
    </div>

    <div id="popup_background"></div>  

    <div id="container">
      <%= yield %>
    </div>

</body>
</html>
