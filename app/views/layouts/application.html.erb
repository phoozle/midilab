<!DOCTYPE html>
<html>
<head>
  <title>MidiLab</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <script type='text/javascript'>
  <%= yield :javascript_functions %>

  $(document).ready(function() {
    <%= yield :javascript %>
  });
  </script>

</head>
<body>
    <div id=nav>
      <ul>
        <li><h1 class=inline>Midilab: </h1></li>
        <li><%= link_to 'Information', '/information' %></li>
        <li><%= link_to 'Midis', midis_path %></li>
      </ul>
    </div>

    <div id=popup_holder>
      <div id=popup>
        <div id=popup_title><h1></h1></div>
        <div id=popup_close data-popup-toggle><%= image_tag("close.png") %></div>
        <div id=popup_content>
          <p id=content></p>
        </div>
      </div>
    </div>

    <div id="popup_background"></div>  

    <div id="container">
      <%= yield %>
    </div>

</body>
</html>
